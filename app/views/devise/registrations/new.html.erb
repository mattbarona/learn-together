<%= render "devise/shared/error_messages", resource: resource %>
<div class="signup-container">
  <div class="form-wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class="main-header">Lets get started!</h2>
    
    <h3 class="sub-header"> User Login</h3>
    <div>
         <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
         <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %>
    </div>  
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
    </div>
    
    <hr>
    
  <!--Personal Info from new user-->
    <h3 class="sub-header">Profile Info</h3>
    <div>
      <%= f.label :picture %>
      <%= f.text_field :picture, autofocus: true %>
    </div>
    <div>
      <%= f.label :Gender %>
      <%= f.select :gender,[ 'Female', 'Male', 'Other', 'N/A' ], :prompt => 'Gender', autofocus: true %>

      <%= f.label :Age %>
      <%= f.select :age, options_for_select(18..100), :prompt => "Age" ,autofocus: true %>
    </div>
    <div>
      <%= f.text_field :street_address, autofocus: true, placeholder: "Street Address" %>
    </div> 
    <div>
      <%= f.text_field :city, autofocus: true, placeholder: "City" %>
  
      <%= f.text_field :state, autofocus: true, placeholder: "State" %>
      
      <%= f.text_field :country, autofocus: true, placeholder: "Country" %>
    </div>   
    <div>
      <%= f.label :Nationality %>
      <%= f.text_field :nationality, autofocus: true %>
    </div>   
    <div>
      <%= f.label :About_me %><br />
      <%= f.text_area :introduction, :cols => 40, :rows => 5, autofocus: true %>
    </div>
    <div>
      <%= f.submit "Sign up!" %>
    </div>
  </div>  
<%= render "devise/shared/links" %>
</div>

